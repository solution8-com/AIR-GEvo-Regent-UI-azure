{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environmentName": {
      "value": "${AZURE_ENV_NAME}"
    },
    "location": {
      "value": "${AZURE_LOCATION}"
    },
    "principalId": {
      "value": "${AZURE_PRINCIPAL_ID}"
    },
    "openAiResourceName": {
      "value": "${AZURE_OPENAI_RESOURCE}"
    },
    "openAiResourceGroupName": {
      "value": "${AZURE_OPENAI_RESOURCE_GROUP}"
    },
    "openAiSkuName": {
      "value": "${AZURE_OPENAI_SKU_NAME}"
    },
    "searchServiceName": {
      "value": "${AZURE_SEARCH_SERVICE}"
    },
    "searchServiceResourceGroupName": {
      "value": "${AZURE_SEARCH_SERVICE_RESOURCE_GROUP}"
    },
    "searchServiceSkuName": {
      "value": "${AZURE_SEARCH_SKU_NAME}"
    },
    "formRecognizerServiceName": {
      "value": "${AZURE_FORMRECOGNIZER_SERVICE}"
    },
    "formRecognizerResourceGroupName": {
      "value": "${AZURE_FORMRECOGNIZER_RESOURCE_GROUP}"
    },
    "formRecognizerSkuName": {
      "value": "${AZURE_FORMRECOGNIZER_SKU_NAME}"
    },
    "authClientId": {
      "value": "${AUTH_CLIENT_ID}"
    },
    "authClientSecret": {
      "value": "${AUTH_CLIENT_SECRET}"
    },
    "deployOpenAI": {
      "value": "${DEPLOY_OPENAI=true}"
    },
    "deploySearch": {
      "value": "${DEPLOY_SEARCH=true}"
    },
    "deployFormRecognizer": {
      "value": "${DEPLOY_FORM_RECOGNIZER=true}"
    },
    "useExistingCosmosDb": {
      "value": "${USE_EXISTING_COSMOSDB=false}"
    },
    "existingCosmosDbAccountName": {
      "value": "${EXISTING_COSMOSDB_ACCOUNT_NAME=}"
    },
    "existingCosmosDbResourceGroup": {
      "value": "${EXISTING_COSMOSDB_RESOURCE_GROUP=}"
    },
    "existingCosmosDbDatabaseName": {
      "value": "${EXISTING_COSMOSDB_DATABASE_NAME=db_conversation_history}"
    },
    "existingCosmosDbContainerName": {
      "value": "${EXISTING_COSMOSDB_CONTAINER_NAME=conversations}"
    }
  }
}
